pipeline {
        agent any

        stages  {
                stage("Init"){
                        steps {
                                sh 'docker run --network jenkins-agent_default --name pg -e POSTGRES_PASSWORD=insecurepassword -d postgres:alpine && sleep 5'
                        }
                }
                stage("Database") {
                        steps {
                                sh 'set -e && docker exec pg psql postgresql://postgres:insecurepassword@pg/postgres -c  "$(cat sql/00-initdb.sql)"'
                        }
                }
                stage("Test") {
                        steps {
                                sh 'cargo test -- data_mod_ --test-threads=1'
                        }
                }
      
                stage("Build") {
                        steps {
                                sh '/home/jenkins/.cargo/bin/cargo build --release'
                        }
                }
                stage("Destroy") {
                        steps {
                                sh 'docker stop pg && docker rm pg'
                        }
                }
        }

}
